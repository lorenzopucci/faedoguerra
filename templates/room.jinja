{% extends "base.jinja" %}

{%- macro player_link(player) -%}
  <a href="/player/{{player.id}}">{{player.full_name}}</a>
{%- endmacro -%}

{% block head %}
  <title>{{data.tooltip}} - Guerra del Faedo</title>
{% endblock %}

{% block content %}
  <div class="full-width-card">
  <h1>{{data.tooltip}}</h1>

    <div class="data-grid">
      <div>Piano</div>
      <div>{{data.floor}}</div>

      {% if data.owner %}
        <div>Proprietario</div>
        <div>{{player_link(data.owner)}} ({{data.owner.university}})</div>
      {% endif %}

      <div>Possessore attuale</div>
      <div>
        {% if data.current_owner %}
          {{player_link(data.current_owner)}} ({{data.current_owner.university}})
        {% endif %}
      </div>
    </div>
  </div>

  {% if data.events %}
    <div class="full-width-card">
      <h1>Cronologia</h1>

      <table class="theme-table">
      <tbody>
        {% for event in data.events %}
          <tr>
            <td>{{event.time}}</td>
            <td>{{event.announcement | safe}}</td>
          </tr>
        {% endfor %}
      </tbody>
      </table>
    </div>
  {% endif %}
{% endblock %}
